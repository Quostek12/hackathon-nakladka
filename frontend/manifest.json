{
  "manifest_version": 3,
  "name": "Prawda w sieci",
  "version": "1.0",
  "description": "Zobacz to co moze byc ukryte",
  
  "permissions": [
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },

  "action": {
    "default_title": "Moje rozszerzenie",
    "default_popup": "public/popup.html"
  }
}
